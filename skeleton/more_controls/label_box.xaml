<Grid x:Class="skeleton.more_controls.label_box"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="sk" xmlns:more_controls="clr-namespace:skeleton.more_controls"
      mc:Ignorable="d" 
      VerticalAlignment="Top"
              d:DesignWidth="400">
    <Grid.RowDefinitions>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>
    <more_controls:text_block text="عنوان" x:Name="lbl_title" Padding="10,10,10,5"/>
    <Border Grid.Row="1" BorderThickness="2" 
                BorderBrush="SkyBlue"
                CornerRadius="3"
            Padding="1"
                Name="border">
        <d:TextBox BorderThickness="0" />
    </Border>
</Grid>
